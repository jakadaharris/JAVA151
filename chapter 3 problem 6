import java.util.Scanner; 

public class TimeCalculator{

  public static void main(String[] args){

    Scanner scanner = new Scanner(System.in);

    /*
    Write a program that asks the user to enter a number of seconds.
      - There are 60 seconds in a minute. If the number of seconds entered by the user is greater than or equal to 60, the program should display the number of minutes in that many seconds.
      - There are 3,600 seconds in an hour. If the number of seconds entered by the user is greater than or equal to 3,600, the program should display the number of hours in that many seconds.
      - there are 86,400 seconds in a day. If the number of seconds entered by the user is greater than or equal to 86,400, the program should display the number of days in that many seconds.
    */
    
    String userCont = "Yes";
    
    while (userCont.equals("Yes")){
      // Ask user to input a number of seconds.
      System.out.println("Please enter a number of seconds: ");
      int userInputSeconds = scanner.nextInt();
  
      // Use if statement to process time into seconds, hours, and/or days
      if (userInputSeconds >= 60 && userInputSeconds < 3600){
        int minutes = (userInputSeconds / 60);
        int seconds = (userInputSeconds % 60);
        System.out.println(userInputSeconds + " is equal to " + minutes + " minutes and " + seconds + " seconds.");
      } else if (userInputSeconds >= 3600 && userInputSeconds < 86400){
        int hours = (userInputSeconds / 3600);
        int minutes = (hours % 3600);
        int seconds = (minutes % 60);
        System.out.println(userInputSeconds + " is equal to " + hours + " hours, " + minutes + " minutes, and " + seconds + " seconds.");
      } else if (userInputSeconds >= 86400){
        int days = (userInputSeconds / 86400);
        int hours = (days % 86400);
        int minutes = (hours % 60);
        int seconds = (minutes % 60);
        System.out.println(userInputSeconds + " is equal to " + days + " days, " + hours + " hours, " + minutes + " minutes, and " + seconds + " seconds.");
      } else if (userInputSeconds < 60){
        System.out.println(userInputSeconds + " is equal to " + userInputSeconds + " seconds.");
      }
         
      // Results nested above. Thank user.
      
      scanner.nextLine();
      
      System.out.println("Would you like try again? (Yes/No)");
      userCont = scanner.nextLine();
    }
    
      System.out.println("Thank you for using this program!");

  }

}
